<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AsmrOne.WinUI3.Views.SubtitleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:AsmrOne.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid
            Height="5"
            x:FieldModifier="public"
            DoubleTapped="titleBar_DoubleTapped">
            <Border
                x:Name="titleBar"
                Height="5"
                HorizontalAlignment="Center"
                VerticalAlignment="Stretch"
                Background="{ThemeResource AccentAAFillColorSecondaryBrush}" />
        </Grid>
        <TextBlock
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="15"
            FontWeight="Bold"
            Text="{x:Bind ViewModel.SubTitle, Mode=OneWay}" />
    </Grid>
</Page>
