<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AsmrOne.WinUI3.Views.HomePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:aModel="using:AsmrOne.WinUI3.Models.AsmrOne"
    xmlns:controls="using:AsmrOne.WinUI3.Controls"
    xmlns:convert="using:AsmrOne.WinUI3.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:itemStyle="using:AsmrOne.WinUI3.Controls.ItemsBase"
    xmlns:local="using:AsmrOne.WinUI3.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:AsmrOne.WinUI3.Models"
    xmlns:wrapper="using:AsmrOne.WinUI3.ViewModels.ItemViewModels"
    mc:Ignorable="d">
    <Page.Resources>
        <convert:OrderConverter x:Key="OrderConverter" />
        <convert:BoolToVisibilityConverter x:Key="BoolToVisibilityConverter" />

    </Page.Resources>
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <ProgressBar
            HorizontalAlignment="Stretch"
            Background="Transparent"
            IsIndeterminate="{x:Bind ViewModel.IsLoading, Mode=OneWay}" />
        <StackPanel
            Grid.Row="1"
            Margin="25,25,25,0"
            HorizontalAlignment="Stretch"
            Orientation="Horizontal">

            <ComboBox
                IsEnabled="{x:Bind ViewModel.LoadingEnable, Mode=OneWay}"
                ItemsSource="{x:Bind ViewModel.Orders, Mode=OneWay}"
                SelectedItem="{x:Bind ViewModel.SelectOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <ComboBox.ItemTemplate>
                    <DataTemplate x:DataType="model:QueryWorkOrderWrapper">
                        <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <CheckBox
                Margin="10,0,0,0"
                Content="字幕"
                IsChecked="{x:Bind ViewModel.IsSubtitle, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                IsEnabled="{x:Bind ViewModel.LoadingEnable, Mode=OneWay}" />
        </StackPanel>
        <ItemsView
            Grid.Row="2"
            Margin="25,0,25,25"
            IsEnabled="{x:Bind ViewModel.LoadingEnable, Mode=OneWay}"
            ItemsSource="{x:Bind ViewModel.Works, Mode=OneWay}">
            <ItemsView.ItemTemplate>
                <DataTemplate x:DataType="wrapper:DetilyItemViewModel">
                    <ItemContainer>
                        <i:Interaction.Behaviors>
                            <i:EventTriggerBehavior EventName="ItemInvoked">
                                <i:InvokeCommandAction Command="{x:Bind InvokeCommand}" />
                            </i:EventTriggerBehavior>
                        </i:Interaction.Behaviors>
                        <Grid
                            x:Name="mainGrid"
                            Margin="5"
                            CornerRadius="5">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition x:Name="row1" Height="4*" />
                                    <RowDefinition x:Name="row2" Height="6*" />
                                </Grid.RowDefinitions>

                                <controls:ImageControl
                                    x:Name="image"
                                    Grid.RowSpan="2"
                                    VerticalAlignment="Center"
                                    IsHideCover="{x:Bind HideCover}"
                                    Source="{x:Bind Cover}"
                                    Stretch="UniformToFill" />
                                <Border
                                    Margin="0,5,5,0"
                                    Padding="5"
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Top"
                                    Background="{ThemeResource AccentAAFillColorDefaultBrush}"
                                    CornerRadius="5"
                                    Visibility="{x:Bind IsNTFS, Mode=OneWay, Converter={StaticResource BoolToVisibilityConverter}}">
                                    <TextBlock
                                        FontSize="12"
                                        Foreground="{ThemeResource TextOnAccentFillColorPrimaryBrush}"
                                        Text="R18" />
                                </Border>
                                <Grid
                                    x:Name="session"
                                    Grid.Row="1"
                                    Margin="2"
                                    Background="{ThemeResource AcrylicInAppFillColorDefaultBrush}"
                                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                                    BorderThickness="1"
                                    CornerRadius="5"
                                    Opacity="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto" />
                                        <RowDefinition Height="auto" />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.ColumnSpan="2"
                                        Margin="10"
                                        FontSize="12"
                                        Text="{x:Bind Title}"
                                        TextTrimming="CharacterEllipsis" />
                                    <TextBlock
                                        Grid.Row="1"
                                        Grid.ColumnSpan="2"
                                        Margin="15,0,0,0"
                                        VerticalAlignment="Center"
                                        FontSize="10"
                                        Foreground="{ThemeResource SystemColorGrayTextBrush}"
                                        Text="{x:Bind Name}" />
                                    <TextBlock
                                        Grid.Row="2"
                                        Grid.ColumnSpan="2"
                                        Margin="15,0,5,5"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Bottom"
                                        FontSize="10"
                                        Foreground="{ThemeResource SystemColorGrayTextBrush}">
                                        <Run Text="ID:" />
                                        <Run Text="{x:Bind Id}" />
                                    </TextBlock>

                                </Grid>
                            </Grid>
                        </Grid>
                    </ItemContainer>
                </DataTemplate>
            </ItemsView.ItemTemplate>
            <ItemsView.Layout>
                <UniformGridLayout
                    ItemsJustification="Start"
                    ItemsStretch="Uniform"
                    MinColumnSpacing="2"
                    MinItemHeight="150"
                    MinItemWidth="250" />
            </ItemsView.Layout>
        </ItemsView>
        <PagerControl
            Grid.Row="3"
            Margin="0,0,0,15"
            HorizontalAlignment="Center"
            HorizontalContentAlignment="Center"
            ButtonPanelAlwaysShowFirstLastPageIndex="True"
            CornerRadius="5"
            DisplayMode="ButtonPanel"
            IsEnabled="{x:Bind ViewModel.LoadingEnable, Mode=OneWay}"
            NextButtonCommand="{x:Bind ViewModel.NextItemCommand}"
            NumberOfPages="{x:Bind ViewModel.MaxPageSize, Mode=OneWay}"
            PrefixText=""
            PreviousButtonCommand="{x:Bind ViewModel.ForwardItemCommand}"
            SuffixText="">
            <i:Interaction.Behaviors>
                <i:EventTriggerBehavior EventName="SelectedIndexChanged">
                    <i:InvokeCommandAction Command="{x:Bind ViewModel.JumpToPageCommand}" />
                </i:EventTriggerBehavior>
            </i:Interaction.Behaviors>
        </PagerControl>
    </Grid>
</Page>
