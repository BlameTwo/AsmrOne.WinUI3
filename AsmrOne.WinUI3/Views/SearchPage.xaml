<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="AsmrOne.WinUI3.Views.SearchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:AsmrOne.WinUI3.Controls"
    xmlns:cui="using:CommunityToolkit.WinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:AsmrOne.WinUI3.Views"
    xmlns:m="using:AsmrOne.WinUI3.Models.AsmrOne"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:model="using:AsmrOne.WinUI3.Models.ItemWrapper"
    xmlns:wrapper="using:AsmrOne.WinUI3.ViewModels.ItemViewModels"
    Margin="25"
    mc:Ignorable="d">
    <i:Interaction.Behaviors>
        <i:EventTriggerBehavior EventName="Loaded">
            <i:InvokeCommandAction Command="{x:Bind ViewModel.LoadedCommand}" />
        </i:EventTriggerBehavior>
    </i:Interaction.Behaviors>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="auto" />
                </Grid.ColumnDefinitions>
                <ComboBox ItemsSource="{x:Bind ViewModel.TagTypes, Mode=OneWay}" SelectedItem="{x:Bind ViewModel.SelectTagType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="m:TagType">
                            <TextBlock Text="{x:Bind Display}" />
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <cui:TokenizingTextBox
                    x:Name="suggestBox"
                    Grid.Column="1"
                    Margin="5,-8,0,0"
                    VerticalAlignment="Center"
                    Header="{x:Null}"
                    ItemsSource="{x:Bind ViewModel.Tag, Mode=TwoWay}"
                    SuggestedItemsSource="{x:Bind ViewModel.CacheTag, Mode=OneWay}"
                    TextMemberPath="DisplayName"
                    TokenDelimiter=",">
                    <i:Interaction.Behaviors>
                        <i:EventTriggerBehavior EventName="TokenItemAdding">
                            <i:InvokeCommandAction Command="{x:Bind ViewModel.TokenAddingCommand}" />
                        </i:EventTriggerBehavior>
                    </i:Interaction.Behaviors>
                    <cui:TokenizingTextBox.SuggestedItemTemplate>
                        <DataTemplate x:DataType="model:SearchTagWrapper">
                            <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" />
                        </DataTemplate>
                    </cui:TokenizingTextBox.SuggestedItemTemplate>
                    <cui:TokenizingTextBox.TokenItemTemplate>
                        <DataTemplate x:DataType="model:SearchTagWrapper">
                            <TextBlock Text="{x:Bind DisplayName, Mode=OneWay}" />
                        </DataTemplate>
                    </cui:TokenizingTextBox.TokenItemTemplate>
                </cui:TokenizingTextBox>
            </Grid>
            <Button
                Grid.Column="1"
                Margin="5,0,0,0"
                Padding="10"
                Command="{x:Bind ViewModel.SearchCommand, Mode=OneWay}"
                CommandParameter="{x:Bind suggestBox.Text, Mode=OneWay}"
                Style="{ThemeResource TransparentButtonStyle}">
                <FontIcon
                    FontFamily="Segoe Fluent Icons"
                    FontSize="12"
                    Glyph="&#xE721;" />
            </Button>
        </Grid>

    </Grid>
</Page>
